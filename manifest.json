{
  "manifest_version": 3,
  "name": ">arch // AI Architect",
  "version": "1.0",
  "description": "Suite de Orquestación Creativa y Soporte Técnico para IA.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://chat.deepseek.com/*",
    "https://manus.im/*",
    "https://bolt.new/*"
  ],
  "action": {
    "default_popup": "src/pages/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://chat.deepseek.com/*",
        "https://manus.im/*",
        "https://bolt.new/*"
      ],
      "js": [
        "src/core/templates.js",
        "src/inject/ui.js",
        "src/inject/snatcher.js",
        "src/inject/content.js"
      ],
      "css": [
        "assets/styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "src/pages/options.html",
    "open_in_tab": true
  }
}