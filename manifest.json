{
  "manifest_version": 3,
  "name": ">arch extension",
  "version": "16.0",
  "description": "The AI Architecture Console. Gold Edition.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/pages/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "options_page": "src/pages/options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/core/library.js",
        "src/core/engine.js",
        "src/inject/snatcher.js",
        "src/inject/ui.js",
        "src/inject/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "toggle-arch-console": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open >arch Console"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "src/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}