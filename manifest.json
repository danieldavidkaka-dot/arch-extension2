{
  "manifest_version": 3,
  "name": ">arch extension",
  "version": "12.0",
  "description": "The AI Architecture Console. Press >_ to inject engineering prompts.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://chat.deepseek.com/*"
  ],
  "action": {
    "default_popup": "src/pages/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "options_page": "src/pages/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://chat.deepseek.com/*"
      ],
      "css": [
        "assets/styles/core.css",
        "assets/styles/modules.css"
      ],
      "js": [
        "src/core/library.js",
        "src/core/engine.js",
        "src/inject/ui.js",
        "src/inject/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/styles/core.css",
        "assets/styles/modules.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}